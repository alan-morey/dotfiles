[alias]
	co = checkout
	ci = commit --verbose
	s = status -sb --ignore-submodules=untracked
	st = status -sb
	br = branch
	di = diff
	unstage = reset HEAD --
    undo-commit = reset --soft HEAD^
    meld = !~/bin/git-meld.pl
    br-desc = !~/bin/git-branch-desc.pl
	count = shortlog -sn

[color]
	diff = auto
	status = auto
	branch = auto
	ui = true

[credential]
	helper = cache